{
  "files.exclude": {
    ".vscode": true,
    "**/.cache": true,
    "**/*.{exe,dSYM}": true,
    "**/compile_commands.json": true,
    "**/*.part.json": true
  },
  "files.associations": {
    "*.h": "c",
  },
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/src/**"
  ],
  "C_Cpp.default.cStandard": "c99",
  "c-cpp-flylint.clang.extraArgs": [
    "--enable-config"
  ],
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json"
}
